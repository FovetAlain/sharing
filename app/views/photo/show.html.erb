    <style type="text/css">
      [class*="col"] { margin-bottom: 20px; }
  .modal-dialog  {width:735px;height:600px;}
#page{margin-left: 20px;margin-right: 20px;font-size: 1.1em;}
    </style>

<div id="main-container" class="container">
      <div class="row">


          <!--  main content -->
        	<% a=0 
             b=17
             page_number=1
              while page_number < @page.to_i do
                a += 18
                b += 18
                page_number += 1
              end         
           @records[a..b].each_with_index do |photo, index| %>
			<div class="col-xs-2">	 

<!-- Button trigger modal -->
<a data-toggle="modal" data-target="#myModal<%=index+1%>">
  <%= image_tag "#{photo.split('/').last}" %>
</a>


<!-- Modal -->
<div class="modal fade" id="myModal<%=index+1%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Photo</h4>
      </div>
      <div class="modal-body">
        <%= image_tag "#{photo.split('/').last.split('_small').first}.jpg" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

			 </div>
			<%end%>
</div>
<div class="row">
  <div class="col-xs-4 col-xs-offset-5">
 <%= link_to photo_path(@page.to_i-1), class: 'btn btn-warning' do %>
  <i class="glyphicon glyphicon-chevron-left"></i>
<% end %>
<span id="page">Page <%= @page %></span>  
<%= link_to photo_path(@page.to_i+1), class: 'btn btn-primary' do %>
  <i class="glyphicon glyphicon-chevron-right"></i>
<% end %>
  </div>
</div>
        <div class="row">

   <br>Page   
<% page = 1 
while page <= @records.size/17 do%>
<%= link_to page, photo_path(page) %>
<% page +=1
end%>
</div>

    </div>
</div>

