     <div id="main-container" class="container">
      <div class="row">
        <div id="sidebar" class="col-xs-4">
          <!-- sidebar content -->
        </div>
        <div id="content" class="col-xs-4">
          <!--  main content -->

          <h1>Hello Dear family !</h1>
         <br>


            <%= form_tag user_sessions_path, method: :post do%>
              <div class="form-group">
                <%= label_tag :username %>

                <%= text_field_tag :username, nil, class: 'form-control'%>
                
              </div>
              <div class="form-group">
                <%= label_tag :password%>
                <%= password_field_tag :password, nil, class: 'form-control'%>
                <br>
              </div>
              <div class="actions">
                <%= submit_tag "Login", class: "btn btn-primary" %>
            <input type="button" value="Don't remember your password ?" class="btn btn-danger"/>
              </div>
          <% end %>
      </div>
      </div>
    </div>